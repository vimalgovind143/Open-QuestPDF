@{ViewData["Title"] = "Report Generator";Layout = "_Layout";}

<div class="container fade-in">
    <div class="glass-panel p-4 mb-4">
        <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
            <div>
                <div class="hero-kicker">Generate a sample</div>
                <h2 class="section-title mb-2">Choose a template and export instantly</h2>
                <p class="text-muted mb-0">Every link hits a live API endpoint that composes a QuestPDF document in real time.</p>
            </div>
            <div class="d-flex gap-2">
                <span class="tag-chip">Instant download</span>
                <span class="tag-chip">A4 / A5</span>
                <span class="tag-chip">Brand friendly</span>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-lg-6">
            <div class="glass-card">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="fw-semibold">Business documents</div>
                    <span class="badge bg-primary">Core</span>
                </div>
                <div class="report-grid row g-2">
                    <div class="col-12">
                        <a href="/Home/GenerateReport?reportType=tax-invoice" class="report-link d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-receipt-cutoff text-primary me-2"></i>Tax invoice</span>
                            <i class="bi bi-download"></i>
                        </a>
                    </div>
                    <div class="col-12">
                        <a href="/Home/GenerateReport?reportType=receipt" class="report-link d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-cash-coin text-success me-2"></i>Receipt</span>
                            <i class="bi bi-download"></i>
                        </a>
                    </div>
                    <div class="col-12">
                        <a href="/Home/GenerateReport?reportType=purchase-order" class="report-link d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-cart-check text-warning me-2"></i>Purchase order</span>
                            <i class="bi bi-download"></i>
                        </a>
                    </div>
                    <div class="col-12">
                        <a href="/Home/GenerateReport?reportType=project-timeline" class="report-link d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-calendar-week text-warning me-2"></i>Project timeline</span>
                            <i class="bi bi-download"></i>
                        </a>
                    </div>
                    <div class="col-12">
                        <a href="/Home/GenerateReport?reportType=employee-payslip" class="report-link d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-file-earmark-person text-danger me-2"></i>Employee payslip</span>
                            <i class="bi bi-download"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="glass-card">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="fw-semibold">Reports and analytics</div>
                    <span class="badge bg-info text-dark">Data</span>
                </div>
                <div class="report-grid row g-2">
                    <div class="col-12">
                        <a href="/Home/GenerateReport?reportType=dynamic-report" class="report-link d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-bar-chart text-info me-2"></i>Dynamic column report</span>
                            <i class="bi bi-download"></i>
                        </a>
                    </div>
                    <div class="col-12">
                        <a href="/Home/GenerateReport?reportType=employee-report" class="report-link d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-people text-success me-2"></i>Employee report</span>
                            <i class="bi bi-download"></i>
                        </a>
                    </div>
                    <div class="col-12">
                        <a href="/Home/GenerateReport?reportType=product-catalog" class="report-link d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-collection text-accent me-2"></i>Product catalog</span>
                            <i class="bi bi-download"></i>
                        </a>
                    </div>
                    <div class="col-12">
                        <a href="/Home/GenerateReport?reportType=generic-report" class="report-link d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-file-earmark-text text-muted me-2"></i>Generic report</span>
                            <i class="bi bi-download"></i>
                        </a>
                    </div>
                    <div class="col-12">
                        <a href="/Home/GenerateReport?reportType=budget-analysis" class="report-link d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-pie-chart text-warning me-2"></i>Budget analysis</span>
                            <i class="bi bi-download"></i>
                        </a>
                    </div>
                    <div class="col-12">
                        <a href="/Home/GenerateReport?reportType=attendance-report" class="report-link d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-calendar-check text-info me-2"></i>Attendance report</span>
                            <i class="bi bi-download"></i>
                        </a>
                    </div>
                    <div class="col-12">
                        <a href="/Home/GenerateReport?reportType=assets-report" class="report-link d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-hdd-stack text-primary me-2"></i>Assets report</span>
                            <i class="bi bi-download"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="glass-card mb-3">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <div class="fw-semibold">Financial statements</div>
            <span class="badge bg-warning text-dark">Finance</span>
        </div>
        <div class="report-grid row g-2">
            <div class="col-md-3 col-sm-6">
                <a href="/Home/GenerateReport?reportType=income-statement" class="report-link d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-graph-up text-success me-2"></i>Income statement</span>
                    <i class="bi bi-download"></i>
                </a>
            </div>
            <div class="col-md-3 col-sm-6">
                <a href="/Home/GenerateReport?reportType=financial-position" class="report-link d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-bank text-primary me-2"></i>Financial position</span>
                    <i class="bi bi-download"></i>
                </a>
            </div>
            <div class="col-md-3 col-sm-6">
                <a href="/Home/GenerateReport?reportType=trial-balance" class="report-link d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-calculator text-warning me-2"></i>Trial balance</span>
                    <i class="bi bi-download"></i>
                </a>
            </div>
            <div class="col-md-3 col-sm-6">
                <a href="/Home/GenerateReport?reportType=comparison-report" class="report-link d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-arrow-left-right text-info me-2"></i>Comparison report</span>
                    <i class="bi bi-download"></i>
                </a>
            </div>
            <div class="col-md-3 col-sm-6">
                <a href="/Home/GenerateReport?reportType=budget-comparison" class="report-link d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-clipboard-data text-danger me-2"></i>Budget comparison</span>
                    <i class="bi bi-download"></i>
                </a>
            </div>
            <div class="col-md-3 col-sm-6">
                <a href="/Home/GenerateReport?reportType=enhanced-budget-comparison" class="report-link d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-graph-up-arrow text-accent me-2"></i>Enhanced budget comparison</span>
                    <i class="bi bi-download"></i>
                </a>
            </div>
            <div class="col-md-3 col-sm-6">
                <a href="/Home/GenerateReport?reportType=all-reports" class="report-link d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-files text-primary me-2"></i>All reports bundle</span>
                    <i class="bi bi-download"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="glass-card">
        <div class="d-flex align-items-center mb-3">
            <span class="hero-kicker me-2">Flow</span>
            <div class="divider flex-grow-1"></div>
        </div>
        <div class="row text-center g-3">
            <div class="col-md-4">
                <div class="glass-card h-100">
                    <div class="text-primary mb-2"><i class="bi bi-1-circle"></i></div>
                    <h6 class="fw-bold">Select a template</h6>
                    <p class="text-muted mb-0">Pick a report type. Each link calls a dedicated API endpoint.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="glass-card h-100">
                    <div class="text-accent mb-2"><i class="bi bi-2-circle"></i></div>
                    <h6 class="fw-bold">QuestPDF composes</h6>
                    <p class="text-muted mb-0">The server assembles layout, data, and assets on the fly.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="glass-card h-100">
                    <div class="text-success mb-2"><i class="bi bi-3-circle"></i></div>
                    <h6 class="fw-bold">Download & iterate</h6>
                    <p class="text-muted mb-0">Your PDF downloads instantly. Tweak data or styling and rerun.</p>
                </div>
            </div>
        </div>
    </div>
</div>